{
  "name": "smartcv",
  "version": "1.0.0",
  "private": true,
  "description": "Your free self-hosted intelligent assistant for analyzing, optimizing, and comparing resumes with job descriptions using AI.",
  "scripts": {
    "postinstall": "cd frontend && npm install && cd ../backend && npm install",
    "start": "concurrently \"npm run start --prefix frontend\" \"npm run start --prefix backend\"",
    "build": "npm run build --prefix frontend",
    "lint": "eslint .",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "angular-eslint": "^20.6.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^8.0.0",
    "lint-staged": "^15.4.0",
    "prettier": "^3.6.2",
    "pretty-quick": "^4.2.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.46.3"
  },
  "lint-staged": {
    "*.{ts,js,json,css,html,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100,
    "tabWidth": 2,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  }
}
