{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "strict": true,

    "paths": {
      "@smartcv/shared": ["dist/libs/types/src/index.d.ts"],
      "@smartcv/shared/*": ["dist/libs/types/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
