{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "@smartcv/types": ["dist/libs/types"],
      "@smartcv/types/*": ["dist/libs/types/*"],
      "@smartcv/shared": ["dist/libs/shared"],
      "@smartcv/shared/*": ["dist/libs/shared/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
