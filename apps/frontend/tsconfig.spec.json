{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "target": "es2016",
    "types": ["jest", "node"],
    "isolatedModules": true
  },
  "files": ["src/test-setup.ts"],

  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "**/*.spec.ts",
    "**/*.d.ts",
    "src/**/testing/**/*",
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
